.btnFloat
    background whatsapp
    box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px;
    border-radius 100%
    color #fff
    font-weight 800
    font-size 1em
    margin 1em
    padding 1em
    position fixed
    text-align center
    right 1em
    bottom 1em
    text-decoration none
    transition all 0.5s ease
    &:hover
        background #09ce04
.btnFloatTxt
    margin 0em
    font-family sans-serif
    font-size 0.4em
