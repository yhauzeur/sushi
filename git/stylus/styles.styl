@import "colors"
@import "nib/vendor"
@import "gradients"
vendor-prefixes = o ms moz webkit

// -global
    :root
        --card__elements 200px;
        body
            box-sizing border-box
            color text
            font-family sans-serif
            font-size 16px
            margin 0
            padding 0
        figure
            margin 0
            padding 0
        .avocado_color
            color avocado
        .ebook
            max-width 450px
            width 100%
        .mx425
            margin auto
            max-width 425px
        .mx768
            margin auto
            max-width 768px
            padding 0 2em
        .mx1024
            margin auto
            max-width 1024px
        .pxem
            padding 0 2em
        .pxem0
            padding 0
        .pyem
            padding 2em 0
        .pyem0
            padding 0
        .sushi_color
            color sushi
        .sushiLight_color
            color sushiLight
        .sushiOrange_color
            color sushiOrange
// BEM
    // .master
    //     .lateralBar
    //         display grid
    //         grid-template-columns 2em, 1fr
    .btnComprar
        background sushiLight
        border-radius 20px
        color #fff
        display inline-block
        margin auto
        padding 1em
        text-decoration none
        text-transform uppercase
        font-weight 700
        &hover
                background sushi

    .h2transition
        transition all 0.3s ease
        &:hover
            background-color sushiLight
    .btnIngresar
        background star
        box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px;
        text-decoration none
        padding 1em
        border-radius 1em
        color #222222
        margin-top 0.5em
        display inline-block
        font-weight 800
// colorBand
    .sectionColor
        background sushiLight
        margin-bottom 2em
        h2
        h3
            color #fff
            margin auto
            max-width 768px
            text-align center
        h2
            margin-bottom .5em
            padding 0 .5em
        h3
            font-size 1em

// gallery
    .gallery
        height 50vh
        grid-template-columns repeat(1, 2fr)
        display flex
        flex-direction columns

    .gallery__boxes1
    .gallery__boxes2
        // background sushi
        object-fit contain

    .gallery__boxes1
        width 33vw
        padding: 1em
    .gallery__boxes2
        background-image url("../img/sushiBlock.jpg")
        background-position center
        background-repeat no-repeat
        width  66vw
        color #fff
        position relative
        h2
            position absolute
            bottom 1em
            left 1em

// header
    #header
        transition 0.3s

    .header
        background-origin borderbox
        background-position center
        background-repeat no-repeat
        background-image url("../img/bgSushi.webp")
        background-repeat repeat
        height 100%
        object-fit cover
        padding 2.5em 0 3em 0
        position relative
        text-align center
        & h1
            margin 0 0 .5em 0
        & h2
            color sushiOrange
            font-size 1em
            margin 0 0 2em 0
        .imgLogo
            height 100px
            margin-bottom 1em
            width auto
        & .imgProfile
            height auto
            width 200px

// intro
    .intro
        background-image url("../img/bgSushi.webp")
    .intromx
        align-content  center
        display flex
        flex-direction columns
        justify-content flex-end
        max-width 1024px
        margin auto
    .mx425
        max-width 425px
        padding 2em
    .intro__roll
        max-width 250px

