@import "colors"
@import "nib/vendor"
@import "gradients"
vendor-prefixes = o ms moz webkit

// -global
    :root
        --card__elements 200px
        html
            scroll-behavior smooth
        body
            box-sizing border-box
            color text
            font-family sans-serif
            font-size 16px
            margin 0
            padding 0
        figure
            margin 0
            padding 0
        .avocado_color
            color avocado
        .ebook
            max-width 450px
            width 100%
        .mx425
            margin auto
            max-width 425px
        .mx768
            margin auto
            max-width 768px
            padding 0 2em
        .mx1024
            margin auto
            max-width 1024px
        .pxem
            padding 0 2em
        .pxem0
            padding 0
        .pyem
            padding 2em 0
        .pyem0
            padding 0
        .star
            color star
        .sushi_color
            color sushi
        .sushiLight_color
            color sushiLight
        .sushiOrange_color
            color sushiOrange
        .white
            color white
// BEM
// Button buy
    .btn--white
        color white
        text-decoration: none
    .btnComprar
        --btnX 1em
        --btnY 2em
        background btn
        box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px;
        border-radius 1.5em
        color #222222
        display inline-block
        font-weight 800
        margin-top 0.5em
        padding-top var(--btnX)
        padding-bottom var(--btnX)
        padding-left var(--btnY)
        padding-right var(--btnY)
        text-decoration none
        transition all 0.5s ease
        &:hover
            background btnDark
    .buyer
        p
            margin 2px
            font-size: 0.9em
    .buy_btn
        padding-top 0.5em
    .buyer--color
        color sushi
    .buyer__price
            font-size: 1.1em
    .buyer--text-small
    .buyeroldPrice
        font-size: 0.9em
    .buyeroldPrice
        text-decoration: line-through
// course
    .course
        margin 2em 0
        h2
            font-size: 2em
            margin-bottom 5px
        h3
            margin-top 0
            margin-bottom 2em
    .course__title
        text-align center
        padding-top 0.5em
        h3
            color sushiOrange
    .course__topics
        display flex
        flex-direction row
        flex-wrap wrap
        justify-content: center
        padding-bottom 2em
    .course__topic img
        width 320px
        margin 2px 5px
    .course__topic
        position relative
        h2, h3
            color white
    .topic__top
        font-size 2.5em
        position absolute
        top 0.5em
        left 1em
    .topic__down
        font-size 1em
        position absolute
        bottom 1em
        left 2em
        margin 0.5em auto
        i
            margin-bottom 0.5em

// header
    #header
        transition 0.3s
    .header
        background-origin borderbox
        background-position center
        background-repeat no-repeat
        background-image url("../img/bgSushi.webp")
        background-repeat repeat
        height 100%
        object-fit cover
        padding 2.5em 0 3em 0
        position relative
        text-align center
        & h1
            margin 0 0 .5em 0
        & h2
            color sushiOrange
            font-size 1em
            margin 0 0 2em 0
            padding 0 1em
        .imgLogo
            height 100px
            margin-bottom 1em
            width auto
        & .imgProfile
            height auto
            width 200px

// intro
    .intro
        background-image url("../img/bgSushi.webp")
    .intromx
        align-content  center
        display flex
        flex-direction columns
        justify-content flex-end
        max-width 1024px
        margin auto
    .mx425
        max-width 425px
        padding 2em
    .intro__roll
        max-width 250px

