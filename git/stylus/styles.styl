// maya
    .maya
        display grid
        grid-template-columns repeat(4,2fr)
        font-size: 0.8em
        justify-content center
        max-width 1024px
        margin auto
        text-align center
        & i
            display inline
            justify-items center
            margin auto
            text-align: center
    .maya__bg
        background-origin borderbox
        background-position center
        // background-image url("../img/bgSushi.webp")
        background-repeat repeat
        background: #000;
        color #fff
        object-fit cover
    .maya__card
        margin 0.5em
        padding 0.5em
        h3
            margin 0 auto
            color #fff
    .maya--noriBackground
    .maya--whiteBackground
        margin 1em auto
        padding 0.3em
        max-width var(--card__elements)
    .maya__bottom
        margin-bottom 2em
        padding-bottom 2em
    .maya__title
        width 100%
        text-align center
        background sushi
        color white
        padding 1px 0
        margin 2em 0
    .maya__top
        padding-top 2em
    .maya--noriBackground
        background sushi
        color #fff
        display block

// parallax
    .parallax
        background-origin borderbox
        background-position 100%
        background-repeat no-repeat
        background-image url("../img/pexels-photo-5878433.webp")
        background-size cover
        background-attachment fixed
        color #fff
        min-height auto
        padding 3em 0
        width 100%
        & .container
            align-items auto
            display flex
            flex-direction column
            flex-grow 0
            flex-shrink 0
            flex-basis auto
            margin auto
            max-width 1024px
            padding 1em 2em
            text-align center
        & h2
            background-color sushi
            margin auto
            max-width 280px
            padding 0.5em
            text-transform uppercase
            border-radius 2px

// mediaQuery
    @media all and (max-width 768px){
        .header h1 {
            font-size 1.5em
        }
        .header h2 {
            font-size 1.1em
        }
        .intromx {
            flex-wrap wrap
            .mx425, .mx768 {
                padding 1em
                text-align: center
            }
        }
        .maya{
            grid-template-columns repeat(2,2fr)
            }
        .maya__card{
            width auto
            }        
    }
    @media all and (min-width 596px){
        .hideSm{
            display none
        }
    }
    @media all and (max-width 596px){
        .hideLg{
            display none
        }
    }