// objections
.objections
    align-items center
    color white
    background #000
    display flex
    flex-wrap wrap
    flex-direction row
    justify-content center
    background-origin borderbox
    background-position 100%
    background-repeat repeat
    background-image url("../img/bgImgLogos.png")
    background-size cover
    padding 3em 2em
.objections--list
    padding-bottom 1em
.objections__txt
    ul
        li
            padding 3px 0
.price
    font-size 0.8em
.video
    display block
    margin auto 2em
    padding 1em
    max-width 650px


// parallax
    .parallax
        background-origin borderbox
        background-position 100%
        background-repeat no-repeat
        background-image url("../img/pexels-photo-5878433.webp")
        background-size cover
        background-attachment fixed
        color #fff
        min-height auto
        padding 3em 0
        width 100%
        & .container
            align-items auto
            display flex
            flex-direction column
            flex-grow 0
            flex-shrink 0
            flex-basis auto
            margin auto
            max-width 1024px
            padding 1em 2em
            text-align center
        & h2
            background-color sushi
            margin auto
            max-width 280px
            padding 0.5em
            text-transform uppercase
            border-radius 2px

// teacher
    .small
        font-size .5em
        margin 0
        color white
    .teacher
        --size 0.5em
        background black
        color #fff
        img
            max-width: 250px
    .teacher__info
        order 1
        padding 3em 2em
        h2
            font-size: 2.5em
            margin-bottom 0.5em
    .teacher__img
        order 2
        padding 2em
    .teacher__size
        display grid
        grid-template-columns 2fr 1fr
        align-items center

// testimonials
    .coustom
        position relative
    .arrow-right
        display inline-block
        position absolute
        z-index 10
        bottom 9em
        right 1em
        opacity 0.2
    .arrow-left
        display inline-block
        position absolute
        z-index 10
        bottom 9em
        left 1em
        opacity 0.2
    .coustomer
        position relative
        display grid
        justify-items center
        grid-template-columns repeat(6, auto)
        grid-template-rows repeat(1, 1fr)
        grid-column-gap 1em
        grid-row-gap 1em
        margin 3em
        overflow auto
        white-space nowrap
        p
            white-space: pre-line;
            width 180px
    .coustomer__info
        background var(#000 50%)
        box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px;
        max-width 200px
        padding 1em
    .califications
        display grid
        grid-template-columns repeat(1, 1fr)
        justify-items center
        margin auto
    .plus
        vertical-align: super
        font-size 0.8em
        font-weight 600
    .rate__txt
        color sushi
        font-size: 0.9em
        margin 0
        padding 0
    .top--rate
        margin-top 1em
    .rate
        color black
        margin-left 5px

    .testimonials
        display grid
        grid-template-columns repeat(4, 1fr)
        grid-template-rows repeat(2, 1fr)
        justify-items: center
        padding 2em
        margin auto
    .testimons
        margin 1em
        h3, p
            margin 0.2em
        i
            font-size 1.2em
        h3
            font-size 0.8em
    .testimons__block
        display grid
        grid-template-columns 3em 2fr
        h3
            color #9C9C9C

// mediaQuery
    @media all and (max-width 1024px){
        .testimonials{
            grid-template-columns repeat(3, 1fr)
            grid-template-rows repeat(4, 1fr)
            padding 0.5em
            margin 2em 1em
            }
        }
    @media all and (max-width 768px){
        .header h1 {
            font-size 1.5em
        }
        .header h2 {
            font-size 1.1em
        }
        .intromx {
            flex-wrap wrap
            .mx425,
            .mx768 {
                padding 1em
                text-align: center
            }
        }
        .course__topic img {
            width 100%
            margin 5px 0
            }
        .teacher__size {
            grid-template-columns  1fr
            }
        .teacher__img {
            order 0
            padding 0
            margin 2em auto 0 auto
            }
        .teacher__img img{
            padding 0 auto
            width 200px
            }
        .teacher__info {
            padding-top 0
        }
    }
    @media all and (max-width 700px){
        .video{
            width 100%
            margin 0
            padding 0
            }
        }
    @media all and (max-width 600px){
        .testimonials{
            grid-template-columns repeat(2, 1fr)
            grid-template-rows repeat(4, 1fr)
            padding 1em
            }
        .testimons {
            margin: 0.5em
            }
        }
    @media all and (max-width 425px){
        .testimonials{
            justify-items left
            grid-template-columns repeat(1, 1fr)
            grid-template-rows repeat(auto, auto)
            padding 3em auto
            }
        }