.course
    margin 2em 0
    h2
        font-size: 2em
        margin-bottom 5px
    h3
        margin-top 0
        margin-bottom 2em
.course__title
    text-align center
    padding-top 0.5em
    h3
        color sushiOrange
.course__topics
    display flex
    flex-direction row
    flex-wrap wrap
    justify-content: center
    padding-bottom 2em
.course__topic img
    width 320px
    margin 2px 5px
.course__topic
    position relative
    h2, h3
        color white
.topic__top
    font-size 2.5em
    position absolute
    top 0.5em
    left 1em
.topic__down
    font-size 1em
    position absolute
    bottom 1em
    left 2em
    margin 0.5em auto
    i
        margin-bottom 0.5em